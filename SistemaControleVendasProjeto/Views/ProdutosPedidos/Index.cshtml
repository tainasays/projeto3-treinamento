@model IEnumerable<SistemaControleVendasProjeto.Models.ProdutoPedido>

@{
    ViewData["Title"] = "Pedidos";
}
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container-fluid">

            <a class="navbar-brand ml-4" asp-area="" asp-controller="Home" asp-action="Index">Controle de Vendas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
            </div>

            </ul>
            </>
        </div>
    </nav>
</header>

<div class="ml-3">
    <h1>Lista de Pedidos</h1>

    <p>
        <a asp-action="Create" class="btn btn-info">Novo Pedido</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProdutoID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PedidoID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProdutoID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProdutoPedidoID" class="btn btn-outline-info">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ProdutoPedidoID" class="btn btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ProdutoPedidoID" class="btn btn-outline-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
